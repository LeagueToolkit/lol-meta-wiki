---
import { typeDisplay, refChip } from "../utils/typeLinker";
import PropertyScrollHandler from "./PropertyScrollHandler.astro";
import AddDocumentationButton from "./AddDocumentationButton";

interface PropertyDocs {
  description?: string;
  examples?: string[];
  notes?: string[];
}

interface Property {
  name: string;
  ft: string;
  vt: string;
  kh: string;
  kt: string;
  since?: string;
  docs?: PropertyDocs | null;
  defaultValue?: string;
}

interface Props {
  properties: Property[];
  classIndex: Record<string, string>;
  className: string;
}

const { properties, classIndex, className } = Astro.props;

// Helper to format default values for display
function formatDefaultValue(defaultValue: string): string {
  if (!defaultValue) return defaultValue;
  
  // Try to parse as JSON and pretty-print if it's an object or array
  try {
    const parsed = JSON.parse(defaultValue);
    if (typeof parsed === 'object' && parsed !== null) {
      return JSON.stringify(parsed, null, 2);
    }
  } catch {
    // Not valid JSON or a simple value, return as-is
  }
  
  return defaultValue;
}
---

<section class="properties-section">
  <h2 class="section-title">Properties</h2>
  <div class="properties-grid">
    {
      properties.map((p: Property) => (
        <article class="property-card">
          <div class="property-header">
            <h2 class="property-name">{p.name}</h2>
            <code
              class="type-code"
              set:html={typeDisplay(p.ft, p.vt, p.kt, p.kh, classIndex)}
            />
            {p.since && (
              <span
                class="property-since"
                title={`Added in version ${p.since}`}
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="14"
                  height="14"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <circle cx="12" cy="12" r="10" />
                  <polyline points="12 6 12 12 16 14" />
                </svg>
                {p.since}
              </span>
            )}
          </div>

          {(p.kt !== "0x0" && 
            !["Link", "Embed", "List", "Map", "Pointer"].includes(p.ft)) && (
            <div class="property-metadata">
              <div class="metadata-item">
                <label class="metadata-label">Key Type</label>
                <span class="metadata-value chip">{p.kt}</span>
              </div>
            </div>
          )}

          {p.defaultValue && (
            <div class="default-value-container">
             <label class="metadata-label">Default Value</label>
             <code class="metadata-value default-value">{formatDefaultValue(p.defaultValue)}</code>
            </div>
          )}

          <div class="property-docs">
            <div class="docs-header">
              <label class="docs-label">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="14"
                  height="14"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                  <polyline points="14 2 14 8 20 8" />
                  <line x1="16" y1="13" x2="8" y2="13" />
                  <line x1="16" y1="17" x2="8" y2="17" />
                  <polyline points="10 9 9 9 8 9" />
                </svg>
                Documentation
              </label>
              <AddDocumentationButton
                className={className}
                propertyName={p.name}
                client:load
              />
            </div>
            <div class="docs-content">
              {p.docs?.description ? (
                <div class="docs-text">
                  <p>{p.docs.description}</p>
                  {p.docs.examples && p.docs.examples.length > 0 && (
                    <div class="docs-section">
                      <strong>Examples:</strong>
                      <ul>
                        {p.docs.examples.map((ex: string) => (
                          <li>{ex}</li>
                        ))}
                      </ul>
                    </div>
                  )}
                  {p.docs.notes && p.docs.notes.length > 0 && (
                    <div class="docs-section">
                      <strong>Notes:</strong>
                      <ul>
                        {p.docs.notes.map((note: string) => (
                          <li>{note}</li>
                        ))}
                      </ul>
                    </div>
                  )}
                </div>
              ) : (
                <p class="docs-placeholder">
                  No documentation available yet. Click "Add documentation" to contribute!
                </p>
              )}
            </div>
          </div>
        </article>
      ))
    }
  </div>
</section>

<style>
  .properties-section {
    margin-top: 2rem;
  }

  .section-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--sl-color-white, #1f2937);
    border-bottom: 2px solid var(--sl-color-gray-5, #e5e7eb);
    padding-bottom: 0.75rem;
  }

  .properties-grid {
    display: grid;
    gap: 1rem;
  }

  .property-card {
    background: var(--sl-color-bg-nav, #ffffff);
    border: 1px solid var(--sl-color-gray-5, #e5e7eb);
    border-radius: 0.5rem;
    padding: 1rem;
    transition: all 0.2s ease;
    box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
  }

  .property-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--sl-color-gray-6, #f3f4f6);
  }

  .property-name {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
    color: var(--sl-color-white, #111827);
    letter-spacing: -0.02em;
  }

  .property-since {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    color: var(--sl-color-gray-3, #6b7280);
    padding: 0.2rem 0.5rem;
    background: var(--sl-color-gray-6, #f9fafb);
    border-radius: 0.375rem;
    font-weight: 500;
  }

  .property-since svg {
    opacity: 0.7;
  }

  .property-type {
    margin-bottom: 1.25rem;
  }

  .type-label,
  .metadata-label,
  .docs-label {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--sl-color-gray-3, #6b7280);
    margin-bottom: 0.375rem;
  }

  .type-display {
    background: var(--sl-color-gray-6, #f9fafb);
    border: 1px solid var(--sl-color-gray-5, #e5e7eb);
    border-radius: 0.5rem;
    padding: 0.75rem 1rem;
  }

  .type-code {
    font-size: 0.875rem;
    color: var(--sl-color-white, #1f2937);
    font-weight: 500;
    border-radius: 0.375rem;
    border: 1px solid var(--sl-color-gray-5, #e5e7eb);
  }

  .property-metadata {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    padding: 0.5rem 0.75rem;
    background: var(--sl-color-bg, #fefefe);
    border-radius: 0.375rem;
    border: 1px dashed var(--sl-color-gray-5, #e5e7eb);
  }

  .metadata-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1;
    min-width: 150px;
  }

  .metadata-value {
    font-size: 0.813rem;
    color: var(--sl-color-white, #374151);
  }

  .default-value {
    display: block;
    font-size: 0.75rem;
    background: var(--sl-color-bg, #f9fafb);
    padding: 0.375rem 0.5rem;
    border-radius: 0.25rem;
    border: 1px solid var(--sl-color-gray-5, #e5e7eb);
    color: var(--sl-color-text, #1f2937);
    overflow-x: auto;
    white-space: pre-wrap;
    word-break: break-all;
    max-width: 100%;
  }

  .default-value-container {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    margin-bottom: 0.75rem;
  }

  .property-docs {
    margin-top: 0.75rem;
    padding-top: 0.75rem;
    border-top: 1px solid var(--sl-color-gray-6, #f3f4f6);
  }

  .docs-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.375rem;
  }

  .docs-content {
    background: var(--sl-color-gray-6, #f9fafb);
    border: 1px solid var(--sl-color-gray-5, #e5e7eb);
    border-radius: 0.375rem;
    padding: 0.75rem;
    min-height: 50px;
  }

  .docs-placeholder {
    margin: 0;
    color: var(--sl-color-gray-3, #9ca3af);
    font-size: 0.813rem;
    font-style: italic;
  }

  .docs-text {
    font-size: 0.813rem;
    line-height: 1.5;
    color: var(--sl-color-white, #1f2937);
  }

  .docs-text p {
    margin: 0 0 0.5rem 0;
  }

  .docs-text p:last-child {
    margin-bottom: 0;
  }

  .docs-section {
    margin-top: 0.5rem;
  }

  .docs-section strong {
    display: block;
    margin-bottom: 0.25rem;
    color: var(--sl-color-white, #111827);
  }

  .docs-section ul {
    margin: 0;
    padding-left: 1.25rem;
  }

  .docs-section li {
    margin: 0.125rem 0;
  }

  .chip {
    display: inline-block;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    background: var(--sl-color-gray-6, #f3f4f6);
    font-size: 0.75rem;
    font-weight: 500;
  }

  .chip-link {
    color: var(--sl-color-accent, #4f46e5);
    text-decoration: none;
    transition: background 0.2s ease;
  }

  .chip-link:hover {
    background: var(--sl-color-accent-low, #e0e7ff);
    text-decoration: underline;
  }

  :global(.type-chip) {
    font-size: 0.9rem;
  }

  :global(.type-chip .type-link) {
    color: var(--sl-color-accent, #4f46e5);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s ease;
  }

  :global(.type-chip .type-link:hover) {
    color: var(--sl-color-accent-high, #3730a3);
    text-decoration: underline;
  }

  /* Responsive design */
  @media (max-width: 640px) {
    .property-card {
      padding: 1rem;
    }

    .property-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .property-name {
      font-size: 1.125rem;
    }

    .property-metadata {
      flex-direction: column;
    }

    .metadata-item {
      min-width: 100%;
    }
  }
</style>

<PropertyScrollHandler properties={properties} />
