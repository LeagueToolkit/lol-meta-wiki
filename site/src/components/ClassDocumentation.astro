---
import AddDocumentationButton from "./AddDocumentationButton";

interface ClassDocs {
  description?: string;
  examples?: string[];
  notes?: string[];
}

interface Props {
  className: string;
  docs: ClassDocs | null;
}

const { className, docs } = Astro.props;

// Only show if there's documentation or always show to allow adding docs
const hasContent = docs?.description || (docs?.examples && docs.examples.length > 0) || (docs?.notes && docs.notes.length > 0);
---

<section class="class-documentation">
  <div class="docs-header">
    <h2 class="section-title">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
        <polyline points="14 2 14 8 20 8" />
        <line x1="16" y1="13" x2="8" y2="13" />
        <line x1="16" y1="17" x2="8" y2="17" />
        <polyline points="10 9 9 9 8 9" />
      </svg>
      Class Documentation
    </h2>
    <AddDocumentationButton className={className} client:load />
  </div>

  <div class="docs-content">
    {hasContent ? (
      <div class="docs-text">
        {docs?.description && <p class="docs-description">{docs.description}</p>}
        
        {docs?.examples && docs.examples.length > 0 && (
          <div class="docs-section">
            <strong>Examples:</strong>
            <ul>
              {docs.examples.map((ex) => (
                <li>{ex}</li>
              ))}
            </ul>
          </div>
        )}
        
        {docs?.notes && docs.notes.length > 0 && (
          <div class="docs-section">
            <strong>Notes:</strong>
            <ul>
              {docs.notes.map((note) => (
                <li>{note}</li>
              ))}
            </ul>
          </div>
        )}
      </div>
    ) : (
      <p class="docs-placeholder">
        No class documentation available yet. Click "Add documentation" to contribute!
      </p>
    )}
  </div>
</section>

<style>
  .class-documentation {
    margin-bottom: 2rem;
  }

  .docs-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
    color: var(--sl-color-white, #1f2937);
  }

  .section-title svg {
    color: var(--sl-color-accent, #7c3aed);
  }

  .docs-content {
    background: var(--sl-color-bg-nav, #ffffff);
    border: 1px solid var(--sl-color-gray-5, #e5e7eb);
    border-radius: 0.75rem;
    padding: 1.5rem;
    box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
  }

  .docs-placeholder {
    margin: 0;
    color: var(--sl-color-gray-3, #9ca3af);
    font-size: 0.875rem;
    font-style: italic;
  }

  .docs-text {
    font-size: 0.938rem;
    line-height: 1.6;
    color: var(--sl-color-white, #1f2937);
  }

  .docs-description {
    margin: 0 0 1rem 0;
    font-size: 1rem;
  }

  .docs-section {
    margin-top: 1rem;
  }

  .docs-section strong {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--sl-color-white, #111827);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .docs-section ul {
    margin: 0;
    padding-left: 1.5rem;
  }

  .docs-section li {
    margin: 0.375rem 0;
  }
</style>

